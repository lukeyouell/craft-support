{% extends "_layouts/cp" %}

{% import "_includes/forms" as forms %}
{% import "support/_tickets/includes/ticket" as macros %}

{% set title = ticket.title %}

{% set crumbs = [
    { label: 'Tickets', url: cpUrl('support') }
] %}

{% do view.registerAssetBundle("lukeyouell\\support\\assetbundles\\TicketBundle") %}

{% block content %}
  {% if ticket.ticketStatus != 'archived' %}
    <div class="new-message">
      <form method="post" accept-charset="UTF-8">
        {{ csrfInput() }}

        {{ forms.hidden({
            name:  'action',
            value: 'support/messages/new-message',
        })}}

        {{ forms.hidden({
            name:  'ticketId',
            value: ticket.id|hash,
        })}}

        {{ forms.textareaField({
            first:       true,
            required:    true,
            id:          'message',
            name:        'message',
            placeholder: 'Post a message...',
        })}}

        <div class="new-message-controls">
          {% if settings.attachments and volume %}
            {% include "_components/fieldtypes/Assets/input" with {
              id:                   'attachments',
              fieldId:              'attachments',
              name:                 'attachments',
              selectionLabel:       'Attachment',
              elementType:          assetElementType,
              sourceElementId:      volume.id,
              viewMode:             'list',
              limit:                4,
              defaultFieldLayoutId: volume.fieldLayoutId,
              hideSidebar:          true,
            } %}
          {% endif %}

          <input class="btn submit" type="submit" value="Post message">
        </div>
      </form>
    </div>
  {% endif %}

  <div class="messages">
    {% for message in ticket.messages %}
      {{ macros.message(message) }}
    {% endfor %}
  </div>
{% endblock %}

{% block details %}
  {% if currentUser.can('manageTickets') %}
    <form method="post" accept-charset="UTF-8">
      <div class="meta">
        {{ csrfInput() }}

        {{ forms.hidden({
            name:  'action',
            value: 'support/tickets/save-ticket',
        })}}

        {{ forms.hidden({
            name:  'ticketId',
            value: ticket.id|hash,
        })}}

        {{ forms.selectField({
            label:   'Ticket Status',
            id:      'ticketStatus',
            name:    'ticketStatus',
            value:   ticket.ticketStatus,
            options: ticketStatuses,
        })}}

        <input class="btn submit" type="submit" value="Update ticket">
      </div>
    </form>

    <hr>
  {% endif %}

  <div class="meta read-only">
    <div class="data">
      <div class="heading">
        ID
      </div>
      <div class="value">
        #{{ ticket.id }}
      </div>
    </div>

    <div class="data">
      <div class="heading">
        Status
      </div>
      <div class="value">
        {{ ticket.ticketStatus.label }}
      </div>
    </div>

    {% if currentUser.can('manageTickets') %}
      <div class="data">
        <div class="heading">
          Author
        </div>
        <div class="value">
          <a href="{{ ticket.author.cpEditUrl }}">{{ ticket.author.name }}</a>
        </div>
      </div>
    {% endif %}

    <div class="data">
      <div class="heading">
        Created
      </div>
      <div class="value">
        {{ ticket.dateCreated|datetime('short') }}
      </div>
    </div>

    <div class="data">
      <div class="heading">
        Updated
      </div>
      <div class="value">
        {{ ticket.dateUpdated|datetime('short') }}
      </div>
    </div>
  </div>

  <hr>
{% endblock %}
